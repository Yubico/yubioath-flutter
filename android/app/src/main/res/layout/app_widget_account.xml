<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appwidget_code_layout"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/app_widget_inner_view_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="13dp"
    android:paddingEnd="12dp"
    android:paddingBottom="11dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:paddingStart="0dp"
            android:paddingEnd="18dp"
            android:textColor="@color/widget_primary"
            android:textSize="@dimen/widget_code_text_size"
            tools:text="123 456" />

        <ImageButton
            android:id="@+id/appwidget_copy_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/appwidget_copy_button_text"
            android:src="@drawable/content_copy_24dp"
            android:tint="@color/widget_primary" />

    </LinearLayout>

    <TextView
        android:id="@+id/issuer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/appwidget_issuer_text"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:text="@string/appwidget_issuer_text"
        android:textColor="@color/widget_secondary"
        android:textSize="@dimen/widget_text_size"
        android:singleLine="true"
        android:paddingBottom="2dp"
        tools:text="Cery long issuer name"/>

    <TextView
        android:id="@+id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/appwidget_account_text"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:text="@string/appwidget_account_text"
        android:textColor="@color/widget_secondary"
        android:textSize="@dimen/widget_text_size"
        android:singleLine="true"
        tools:text="tverylongaccount@test.io"/>
</LinearLayout>